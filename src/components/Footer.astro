---
import { FOOTER } from "../consts";
import SelectLang from "./ui/SelectLang.astro";

const today = new Date();
---

<footer>
	<div class="social-links">
		{
			FOOTER.map((link) => (
				<a href={link.link} target="_blank">
					{link.name}
				</a>
			))
		}
		<SelectLang />
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 4em 1em;
		opacity: 0.8;
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		color: #fff;
		text-decoration: none;
		&:hover {
			color: var(--accent);
			transition-duration: 0.4s;
		}
	}
</style>
